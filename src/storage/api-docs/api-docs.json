{
    "openapi": "3.0.0",
    "info": {
        "title": "Tech talks",
        "description": "API documentation for tech talks",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8088/api",
            "description": "Demo API Server"
        }
    ],
    "paths": {
        "/user/register": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Register an user in the app",
                "operationId": "register",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/StoreUserRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        },
        "/user/login": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Log an user in the app",
                "operationId": "login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LogUserRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorised",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        },
        "/talks/upcoming": {
            "get": {
                "tags": [
                    "talks"
                ],
                "summary": "List upcoming talks",
                "operationId": "upcoming",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Talk"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/my-talks": {
            "get": {
                "tags": [
                    "talks"
                ],
                "summary": "List user talks",
                "operationId": "userTalks",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Talk"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorised",
                        "content": {
                            "application/json": {}
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/talks/{id}": {
            "get": {
                "tags": [
                    "talks"
                ],
                "summary": "List a user talk",
                "operationId": "read",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Talk"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorised",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "AuthResponse": {
                "title": "AuthResponse",
                "description": "Response to authenticate an user",
                "properties": {
                    "user": {
                        "$ref": "#/components/schemas/User"
                    },
                    "token": {
                        "title": "token",
                        "description": "Authentication token for user",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "LogUserRequest": {
                "title": "Log User request",
                "description": "Log User request body data",
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "title": "email",
                        "description": "Email of the user",
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "title": "password",
                        "description": "Password of the user",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "StoreUserRequest": {
                "title": "Store User request",
                "description": "Store User request body data",
                "required": [
                    "name",
                    "email",
                    "password"
                ],
                "properties": {
                    "name": {
                        "title": "name",
                        "description": "Name of the user",
                        "type": "string"
                    },
                    "email": {
                        "title": "email",
                        "description": "Email of the user",
                        "type": "string",
                        "format": "email"
                    },
                    "password": {
                        "title": "password",
                        "description": "Password of the user with at least one uppercase character, one lowercase character,\n     * one number, one special char",
                        "type": "string",
                        "maximum": 20,
                        "minimum": 8
                    }
                },
                "type": "object"
            },
            "Talk": {
                "title": "Talk",
                "description": "Talk",
                "properties": {
                    "id": {
                        "title": "id",
                        "description": "ID of the talk",
                        "type": "number"
                    },
                    "topic": {
                        "title": "topic",
                        "description": "Topic of the talk",
                        "type": "string"
                    },
                    "description": {
                        "title": "description",
                        "description": "Description of the talk",
                        "type": "string"
                    },
                    "date": {
                        "title": "date",
                        "description": "Date",
                        "type": "string",
                        "format": "date"
                    },
                    "status": {
                        "title": "status",
                        "description": "status",
                        "type": "string",
                        "enum": [
                            "published",
                            "draft"
                        ]
                    }
                },
                "type": "object"
            },
            "User": {
                "title": "User",
                "description": "User",
                "properties": {
                    "name": {
                        "title": "name",
                        "description": "Name of the user",
                        "type": "string"
                    },
                    "email": {
                        "title": "email",
                        "description": "Email of the user",
                        "type": "string"
                    },
                    "id": {
                        "title": "id",
                        "description": "ID of the user",
                        "type": "number"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    },
    "security": [
        []
    ]
}